<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brajan.mednote.MainActivity">


    <Button
        android:id="@+id/notatka"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:text="Szybka notatka" />

    <Button
        android:id="@+id/nagranie"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/notatka"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:text="DÅ‚ugie nagranie" />


    <Button
        android:id="@+id/baza_danych"
        android:layout_width="match_parent"
        android:layout_below="@+id/notatka"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:text="baza danych" />




    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:src="@drawable/ic_power_settings_new_black_24dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="@color/powerIcon"
            android:id="@+id/offButton"
        />




</RelativeLayout>
